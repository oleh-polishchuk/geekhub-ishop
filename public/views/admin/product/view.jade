.panel.panel-default
    .panel-heading {{ product.name }}

    .panel-body
        ul.breadcrumb
            li
                a(href='#/') iShop
            li
                a(href='#/api/search?group={{ product.group }}') {{ product.group }}
            li.active {{ product.name }}
        .row
            .col-sm-6
                img(src='{{ product.url }}', width='100%')
            .col-sm-6
                table.table.table-bordered
                    tr
                        td Name
                        td
                            div(ng-if='!editMode') {{ product.name }}
                            div(ng-if='editMode')
                                input.form-control(ng-model='product.name')
                    tr
                        td Group
                        td
                            div(ng-if='!editMode') {{ product.group }}
                            div(ng-if='editMode')
                                input.form-control(ng-model='product.group')
                    tr
                        td Price
                        td
                            div(ng-if='!editMode') {{ product.price }}
                            div(ng-if='editMode')
                                input.form-control(ng-model='product.price')
                    tr
                        td Description
                        td
                            div(ng-if='!editMode') {{ product.description }}
                            div(ng-if='editMode')
                                textarea.form-control(ng-model='product.description')

                button.btn.btn-primary.btn-block(type='button', ng-click="addToWishList(product.id)") Add to Wishlist
                br
                ngcart-addtocart(id='{{product.id}}' name='{{product.name}}', price='{{ product.price }}', quantity='1', quantity-max='5') Add to Cart

    .panel-footer
        .row
            .col-sm-1
                button.btn.btn-success(ng-click="editMode = !editMode") Edit
            .col-sm-1
                button.btn.btn-default(ng-click="delete(product.id)") Delete