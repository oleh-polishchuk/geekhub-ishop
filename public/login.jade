doctype html

html
    head
        title iShop

        // Bootstrap
        link(rel='stylesheet', href='./vendor/css/bootstrap.css')
        link(rel='stylesheet', href='./vendor/css/bootstrap-theme.css')

        // Fonts
        link(rel='stylesheet', href='./vendor/css/font-awesome.css')

        // jQuery & Bootstrap
        script(src='./vendor/js/jquery.js')
        script(src='./vendor/js/bootstrap.js')
    body
        .container(style='margin: 10%')
            .jumbotron
                form.form-horizontal(action='/login', method='POST')
                    .form-group
                        a.col-sm-2(href='/#/')
                            img(src='images/logo.png', alt='Mountain View', style='width:100%')
                        .col-sm-10
                            h2 Login
                    .form-group
                        label.control-label.col-sm-2(for='email') Email:
                        .col-sm-10
                            input#email.form-control(ng-model='u.email', name='email', type='email', placeholder='Your Email')
                    .form-group
                        label.control-label.col-sm-2(for='pwd') Password:
                        .col-sm-10
                            input#pwd.form-control(ng-model='u.password', name='password', type='password', placeholder='Your Password')
                    .form-group
                        .col-sm-offset-2.col-sm-10
                            | Do not have an account?&nbsp
                            a(href='/singup') Sign up!
                    .form-group
                        .col-sm-offset-2.col-sm-10
                            button.btn.btn-default(type='login') Login
